<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.cinescape.media"
version="1.0"
name="Cinescape Media"
provider-name="Dex Burgess">
<requires>
  <import addon="xbmc.python" version="2.25.0"/>
  <import addon="script.module.requests" version="2.22.0" />
</requires>
<extension point="xbmc.python.pluginsource" library="addon.py">
  <provides>video</provides>
</extension>
<extension point="xbmc.addon.metadata">
  <summary lang="en">Cinescape Media Network.</summary>
  <description lang="en_GB">Welcome to the Cinescape Media Kodi Channel!  Here you will find videos to a few of our podcasts that have accompanying video!</description>
  <disclaimer lang="en_GB">All videos are property of Cinescape Media Network and it's content creators.  https://cinescape.media</disclaimer>
  <assets>
    <icon>resources\media\icon.png</icon>
    <fanart>resources\media\fanart.jpg</fanart>
    <screenshot>resources\media\screenshot-01.jpg</screenshot>
    <screenshot>resources\media\screenshot-02.jpg</screenshot>
    <screenshot>resources\media\screenshot-03.jpg</screenshot>    
  </assets>
  <news>First release of the Cinescape Media Plugin!</news>
</extension>
</addon>
